<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".CartActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_light"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        android:layout_marginBottom="1dp"
        tools:ignore="MissingConstraints"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_product_cart"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:layout_marginEnd="16dp"
            tools:src="@drawable/asustuf" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_product_name_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Acer Nitro 7"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_product_price_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Rp 15.000.000"
                android:layout_below="@+id/tv_product_name_cart"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_product_price_cart">
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/stok"
                        android:layout_marginEnd="30dp"/>
                    <TextView
                        android:id="@+id/tv_product_stok_cart"
                        tools:text="10"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:text="@string/jumlah"/>
                    <TextView
                        android:text="1"/>
                </TableRow>
            </TableLayout>
            <ImageButton
                android:id="@+id/btn_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_plus_cart"
                android:padding="2dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/holo_orange_dark"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_min_cart"
                android:padding="2dp"
                android:layout_toEndOf="@+id/btn_plus"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:background="@android:color/holo_orange_light"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>